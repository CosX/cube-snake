<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <RootNamespace>KarlCube</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Hosting" Version="6.0.1" />
        <PackageReference Include="Gamepad" Version="1.0.1" />
        <PackageReference Include="Iot.Device.Bindings" Version="2.1.0" />
        <PackageReference Include="System.Device.Gpio" Version="2.1.0" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="images\Companion_Cube.bmp" />
      <Content Include="images\Companion_Cube.bmp">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </Content>
      <None Remove="fonts\font-14.bdf" />
      <Content Include="fonts\font-14.bdf">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </Content>
    </ItemGroup>

</Project>
